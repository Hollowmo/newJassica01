<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jassica.jassica.ui.register.fragment.NewFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginTop="@dimen/dp_20"
       >
       <EditText
           android:id="@+id/new_phone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="请输入手机号"
           android:maxLines="1"
           android:inputType="text"
           android:maxLength="13"
           android:ellipsize="end"
           android:textSize="@dimen/sp_18"
           />

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       <EditText
           android:id="@+id/new_pwdd"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="请输入验证码"
           android:maxLines="1"
           android:inputType="text"
           android:maxLength="13"
           android:ellipsize="end"
           android:textSize="@dimen/sp_18"
           />

           <ImageView
               android:id="@+id/new_img"
               android:layout_width="@dimen/dp_50"
               android:layout_height="wrap_content"
               android:background="@drawable/wecha"
               android:layout_marginRight="@dimen/dp_10"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               />
       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       <EditText
           android:id="@+id/new_note"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="请输入短信验证码"
           android:maxLines="1"
           android:inputType="text"
           android:maxLength="13"
           android:ellipsize="end"
           android:textSize="@dimen/sp_18"
           />

           <Button
               android:id="@+id/new_send_code"
               android:layout_width="@dimen/dp_100"
               android:layout_height="@dimen/dp_30"
               android:text="发送验证码"
               android:textColor="@color/colorWrith"
               android:background="@drawable/button_yuan"
               android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/dp_10"
               />
       </RelativeLayout>
       <EditText
           android:id="@+id/new_pwd"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="请输入密码(6-20位字符,不可输入空格等特殊符号)"
           android:maxLines="1"
           android:inputType="text"
           android:maxLength="13"
           android:ellipsize="end"
           android:textSize="@dimen/sp_18"
           />
       <EditText
           android:id="@+id/new_confirmpwd"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="请确认密码"
           android:maxLines="1"
           android:inputType="text"
           android:maxLength="13"
           android:ellipsize="end"
           android:textSize="@dimen/sp_18"
           />

   </LinearLayout>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >

       <RadioButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:checked="true"
           android:textColor="@color/colorBlue"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="接受《泰海淘用户使用条款》"
           android:textColor="@color/colorBlue"
           />

   </LinearLayout>


    <Button
        android:id="@+id/new_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册并绑定账号"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/button_yuan"
        android:textColor="@color/colorWrith"
        android:layout_marginTop="@dimen/dp_30"
        />


</LinearLayout>