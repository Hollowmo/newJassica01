<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jassica.jassica.ui.sopping.fragment.SoppingFragment">

    <TextView
        android:id="@+id/tv_none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/tv_none"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我的购物车"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16" />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/img_sopping"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_centerInParent="true"
        android:src="@mipmap/sopping" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_sopping"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="您的购物车还没有商品哦~"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/btn_guang_yi_guang"
        android:layout_width="@dimen/dp_190"
        android:layout_height="@dimen/dp_38"
        android:layout_below="@id/img_sopping"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:gravity="center"
        android:background="@drawable/button_yuan"
        android:text="逛一逛"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>