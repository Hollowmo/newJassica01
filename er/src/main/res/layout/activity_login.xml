<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.jassica.jassica.ui.register.activity.RegisterAActivity">


    <TextView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        >

        <ImageView
            android:id="@+id/login_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rigster_left"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_18"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_Me_Gray"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号注册"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/colorBlue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="建议使用大陆手机号进行注册，以便找回密码~"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/colorBlue"
        android:layout_marginLeft="@dimen/dp_14"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20"
        >
        <EditText
            android:id="@+id/login_yhm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:hint=" 请输入手机号"
            android:textSize="@dimen/sp_14"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:background="@drawable/login_kuang"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:textCursorDrawable="@null"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            >

            <EditText
                android:id="@+id/login_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:hint=" 请输入验证码"
                android:textSize="@dimen/sp_14"
                android:background="@drawable/login_kuang"
                android:textCursorDrawable="@null"
                />
            <!--这里预留一个ImageView来放图形验证码-->
            <ImageView
                android:id="@+id/login_img"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="#00FFFFFF"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/dp_12"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接受《泰海淘用户使用条款》"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sp_12"
                />

        </LinearLayout>

        <Button
            android:id="@+id/login_nextstop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/button_yuan"
            android:textColor="@color/colorWrith"
            android:layout_marginTop="@dimen/dp_30"
            />

    </LinearLayout>
</LinearLayout>