<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.me.activity.ReFundActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/refund_tool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/refund_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:src="@drawable/rigster_left"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款订单"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:background="@color/color_Me_Gray"
        android:layout_height="@dimen/dp_1" />
    <android.support.design.widget.TabLayout
        android:id="@+id/refund_tabl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/colorBlack"
        app:tabRippleColor="@color/transparent"
        app:tabIndicatorColor="@color/blue"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/refund_vp"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent"
        />

</LinearLayout>