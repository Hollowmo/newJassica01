<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_Me_Gray"
    tools:context=".ui.home.activity.ExchangeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/exchange_too"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <ImageView
            android:id="@+id/exchange_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:src="@drawable/rigster_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="今日汇率"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16" />
    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/exchange_too"
        android:background="@color/delete_text" />

    <LinearLayout
        android:id="@+id/rate_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_chy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:scaleType="centerCrop"
            android:src="@mipmap/taiguo" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sp_30"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/sp_30"
            android:background="@mipmap/icon_arrow" />


        <ImageView
            android:id="@+id/iv_thb"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/china" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/rate_ll"
        android:layout_marginTop="@dimen/sp_20"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/exchange_unionpay"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/unionpay" />

        <TextView
            android:id="@+id/exchange_unionpay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/exchange_unionpay"
            android:text="银联"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/exchange_thb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_130"
            android:layout_toRightOf="@id/exchange_unionpay_tv"
            android:text="100 THB "
            android:textColor="@color/blue" />

        <ImageView
            android:id="@+id/exchange_right"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/exchange_thb"
            android:src="@mipmap/right_blue" />

        <TextView
            android:id="@+id/exchange_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/exchange_right"
            android:text="¥23.4997"
            android:textColor="@color/blue" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/rl1"
        android:background="@color/color_Me_Gray"/>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/view"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/exchange_unionpay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/zhifubao" />

        <TextView
            android:id="@+id/exchange_unionpay_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/exchange_unionpay2"
            android:text="支付宝"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/exchange_thb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_120"
            android:layout_toRightOf="@id/exchange_unionpay_tv2"
            android:text="100 THB "
            android:textColor="@color/blue" />

        <ImageView
            android:id="@+id/exchange_right2"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/exchange_thb2"
            android:src="@mipmap/right_blue" />

        <TextView
            android:id="@+id/exchange_yuan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/exchange_right2"
            android:text="¥23.4997"
            android:textColor="@color/blue" />

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/rl2"
        android:background="@color/color_Me_Gray"/>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/view2"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/exchange_unionpay3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/wecha" />

        <TextView
            android:id="@+id/exchange_unionpay_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/exchange_unionpay3"
            android:drawableRight="@mipmap/recom"
            android:text="微信"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/exchange_thb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_116"
            android:layout_toRightOf="@id/exchange_unionpay_tv3"
            android:text="100 THB "
            android:textColor="@color/colorRed" />

        <ImageView
            android:id="@+id/exchange_right3"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/exchange_thb3"
            android:src="@mipmap/rlght_red" />

        <TextView
            android:id="@+id/exchange_yuan3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/exchange_right3"
            android:text="¥23.4997"
            android:textColor="@color/colorRed" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/rl3"
        android:background="@color/color_Me_Gray"/>

</RelativeLayout>