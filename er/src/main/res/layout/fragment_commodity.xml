<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/commodity_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.jassica.jassica.ui.commodity.fragmennt.CommodityFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <android.support.v7.widget.Toolbar
        android:id="@+id/tob"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_46">

        <LinearLayout
            android:id="@+id/serach_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/login_kuang"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/main_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="搜索"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_Me_Gray" />


    <android.support.design.widget.TabLayout
        android:id="@+id/commodity_tabl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:tabIndicatorColor="@color/blue"
        app:tabMode="fixed"
        app:tabRippleColor="@color/transparent"
        app:tabSelectedTextColor="@color/blue"
        app:tabTextColor="@color/colorBlack" />

    <com.jassica.jassica.widget.CustomViewPager
        android:id="@+id/commodity_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>