<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_Me_Gray"
    android:orientation="horizontal"
    android:id="@+id/hot_ll"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/hot_img"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_200"
            android:scaleType="fitXY"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_Me_Gray"
            />

        <TextView
            android:id="@+id/hot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="KING POWER"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/hot_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="KING POWER 多规格泰国..."
            android:textSize="@dimen/sp_14"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/hot_red_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:text="90.00 THB"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/hot_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="(约¥21.99)"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_14"
            android:layout_marginBottom="@dimen/dp_20"
            />

    </LinearLayout>
</LinearLayout>
