<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jassica.jassica.ui.register.activity.BindingActivity">

    <TextView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content" />

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/bind_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@drawable/rigster_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="绑定账号"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_18" />

    </Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_Me_Gray" />

    <android.support.design.widget.TabLayout
        android:id="@+id/bind_tabl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorBlue" />

    <android.support.v4.view.ViewPager
        android:id="@+id/bind_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>